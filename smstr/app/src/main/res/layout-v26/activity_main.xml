<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.489">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="@string/gpa_hesaplama"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="358dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="203dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/ders_sayisi"
                    android:prompt="@string/ders_sayisi"
                    android:spinnerMode="dialog" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/krdi"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/k1"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/k1"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/k2"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/k2"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/k3"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/k3"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/k4"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/k4"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/k5"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/k6"
                    android:layout_width="101dp"
                    android:layout_height="40dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/k7"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/harf_sistemi"
                    android:prompt="@string/harf_sistemi"
                    android:spinnerMode="dialog"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="151dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="@string/harf_n"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/h1"
                    android:layout_width="91dp"
                    android:layout_height="40dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/h1"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/h2"
                    android:layout_width="91dp"
                    android:layout_height="40dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/h2"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/h3"
                    android:layout_width="91dp"
                    android:layout_height="40dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/h3"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/h4"
                    android:layout_width="91dp"
                    android:layout_height="40dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/h4"
                    android:textSize="12sp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/h5"
                    android:layout_width="91dp"
                    android:layout_height="40dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="12sp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/h6"
                    android:layout_width="91dp"
                    android:layout_height="40dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="12sp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/h7"
                    android:layout_width="91dp"
                    android:layout_height="40dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="12sp"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:gravity="center"
            android:text="" />

        <Button
            android:id="@+id/Hesapla"
            android:layout_width="162dp"
            android:layout_height="32dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/Hesapla" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>